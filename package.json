{
  "name": "@lyrajs/plugin-disk-persistence",
  "version": "0.0.1-alpha.0",
  "description": "Disk persistence plugin for Lyra",
  "main": "./dist/node/cjs/node-bun/index.js",
  "module": "./dist/node/esm/node-bun/index.js",
  "types": "./dist/node/esm/node-bun/index.d.ts",
  "scripts": {
    "changelog": "auto-changelog -p",
    "lint": "ts-standard --fix",
    "test": "c8 -c src/node-bun/tests/config/c8.json tap --rcfile=src/node-bun/tests/config/tap.yml src/**/tests/*.test.ts",
    "build:node:cjs": "tsc --project tsconfig.node.cjs.json",
    "build:node:module": "tsc --project tsconfig.node.esm.json",
    "build": "rimraf ./dist && pnpm build:node:module && pnpm build:node:cjs"
  },
  "keywords": [
    "lyra",
    "disk persistence",
    "full-text search"
  ],
  "author": {
    "email": "ciao@micheleriva.it",
    "name": "Michele Riva",
    "url": "https://github.com/MicheleRiva"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@nearform/lyra": "^0.0.4",
    "dpack": "^0.6.22"
  },
  "devDependencies": {
    "@types/node": "^18.6.4",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "auto-changelog": "^2.4.0",
    "c8": "^7.12.0",
    "rimraf": "^3.0.2",
    "tap": "^16.3.0",
    "ts-node": "^10.9.1",
    "ts-standard": "^11.0.0",
    "typescript": "^4.7.4"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "node_modules",
      "**/dist/**"
    ]
  }
}